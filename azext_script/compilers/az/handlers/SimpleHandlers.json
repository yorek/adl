{
    "$schema": "https://github.com/yorek/azure-script/simple-handler.schema",
    "handlers": [ 
        {
            "azure_object": "sf cluster",
            "context_parameters": [
                {
                    "parameter": "resource-group",
                    "context": "group"
                }
            ],
            "actions": [
                {
                    "action": "create",
                    "context_parameters": [
                        {
                            "parameter": "location",
                            "context": "location"
                        }
                    ],
                    "required_parameters": [
                        [
                            "certificate-subject-name",
                            "certificate-file",
                            "secret-identifier"
                        ]
                    ]
                }
            ]
        },
        {
            "azure_object": "keyvault",
            "context_parameters": [
                {
                    "parameter": "resource-group",
                    "context": "group"
                }
            ]
        }
    ]
}